<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@mipmap/bg_drawer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/introduction_text"
        android:layout_alignRight="@+id/introduction_text"
        android:textColor="@color/drawer_header_text"
        android:textSize="28sp"
        android:text="@string/app_name"
        />

    <TextView
        android:id="@+id/introduction_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/drawer_header_text"
        android:textSize="16sp"
        android:text="@string/app_introduction"
        />


</RelativeLayout>